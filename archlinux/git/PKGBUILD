# This is an example PKGBUILD file. Use this as a start to creating your own,
# and remove these comments. For more information, see 'man PKGBUILD'.
# NOTE: Please fill out the license field for your package! If it is unknown,
# then please put 'unknown'.

# See http://wiki.archlinux.org/index.php/VCS_PKGBUILD_Guidelines
# for more information on packaging from GIT sources.

# Contributor: snafu <snafu21@user.sourceforge.net>
pkgname=mandelbrot-gtk-git
pkgver=20101104
pkgrel=1
pkgdesc="A multithreaded gtk+ application for rendering the mandelbrot and julia set."
arch=('i686' 'x86_64')
url="http://mandelbrot-gtk.sourceforge.net"
license=('GPL3')
groups=()
depends=('gtk2' 'libxml2')
makedepends=('git' 'pkg-config')
provides=('mandelbrot-gtk')
conflicts=()
replaces=()
backup=()
options=()
source=()
noextract=()
md5sums=() #generate with 'makepkg -g'

_gitroot="git://mandelbrot-gtk.git.sourceforge.net/gitroot/mandelbrot-gtk/mandelbrot-gtk"
_gitname="master"

build() {
  cd "$srcdir"
  msg "Connecting to GIT server...."

  if [ -d $_gitname ] ; then
    cd $_gitname && git pull origin
    msg "The local files are updated."
  else
    git clone $_gitroot $_gitname
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting make..."

  rm -rf "$srcdir/$_gitname-build"
  git clone "$srcdir/$_gitname" "$srcdir/$_gitname-build"
  cd "$srcdir/$_gitname-build"

  make || return 1
  make DESTDIR="$pkgdir" PREFIX=/usr  install
} 

# vim:set ts=2 sw=2 et:
