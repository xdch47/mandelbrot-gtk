# This is an example PKGBUILD file. Use this as a start to creating your own,
# and remove these comments. For more information, see 'man PKGBUILD'.
# NOTE: Please fill out the license field for your package! If it is unknown,
# then please put 'unknown'.

# Maintainer: snafu <snafu21@user.sourceforge.net>
pkgname=mandelbrot-gtk
pkgver=0.3
pkgrel=1
pkgdesc="A multithreaded gtk+ application for rendering the mandelbrot and julia set."
arch=('i686' 'x86_64')
url="http://mandelbrot-gtk.sourceforge.net"
license=('GPL3')
groups=()
depends=('gtk2' 'libxml2')
makedepends=('git' 'pkg-config')
provides=('mandelbrot-gtk')
conflicts=()
replaces=()
backup=()
options=()
install=
changelog=
source=(http://sourceforge.net/projects/mandelbrot-gtk/files/linux_releases/$pkgname-$pkgver.$pkgrel.tar.gz)
noextract=()
md5sums=(8febe8f309d171b61dcb67e7576d4b74)

build() {
  cd "$srcdir/$pkgname-$pkgver.$pkgrel"

  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver.$pkgrel"

  make DESTDIR="$pkgdir" PREFIX="/usr" install
}

# vim:set ts=2 sw=2 et:
