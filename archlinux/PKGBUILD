
# Contributor: Your Name <snafu21@user.sourceforge.net>
pkgname=mandelbrot-gtk
pkgver=20100615
pkgrel=1
pkgdesc="A multithreaded gtk+ application for rendering the mandelbrot and julia set."
arch=('i686' 'x86_64')
url="http://mandelbrot-gtk.sourceforge.net"
license=('GPL3')
groups=()
depends=('gtk2' 'libxml2')
makedepends=('git' 'pkg-config')
optdepends=()
provides=('mandelbrot-gtk')
conflicts=()
replaces=()
backup=()
options=()
install='mandelbrot-gtk.install'
source=()
noextract=()
md5sums=() #generate with 'makepkg -g'

_gitroot=git://mandelbrot-gtk.git.sourceforge.net/gitroot/mandelbrot-gtk/mandelbrot-gtk
_gitname=master

build() {

	cd "$srcdir/"
	if [ -d ./$pkgname/.git ]; then 
		cd $pkgname 
		git pull
	else 
		git clone $_gitroot
		cd $pkgname
	fi
	
	make -j3
	make DESTDIR="$pkgdir" PREFIX=/usr install
}

# vim:set ts=2 sw=2 et:
